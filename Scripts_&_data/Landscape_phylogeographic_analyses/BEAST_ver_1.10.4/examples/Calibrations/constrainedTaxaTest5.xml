<?xml version="1.0" standalone="yes"?>
<!-- simple test 4: two disjoint constraints inside another constraint -->
<beast>

    <taxa id="taxa">
        <taxon id="A"/>
        <taxon id="B"/>
        <taxon id="C"/>
        <taxon id="D"/>
        <taxon id="E"/>
    </taxa>

    <taxa id="AB">
        <taxon idref="A"/>
        <taxon idref="B"/>
    </taxa>

    <taxa id="CD">
        <taxon idref="C"/>
        <taxon idref="D"/>
    </taxa>

    <taxa id="ABCD">
        <taxon idref="A"/>
        <taxon idref="B"/>
        <taxon idref="C"/>
        <taxon idref="D"/>
    </taxa>

    <constantSize id="constant" units="years">
        <populationSize>
            <parameter id="popSize" value="100"/>
        </populationSize>
    </constantSize>

    <coalescentTree id="startingTree">
        <constrainedTaxa>
            <taxa idref="taxa"/>
            <tmrca>
                <taxa idref="AB"/>
            </tmrca>
            <tmrca>
                <taxa idref="CD"/>
            </tmrca>
            <tmrca>
                <taxa idref="ABCD"/>
            </tmrca>
        </constrainedTaxa>
        <constantSize idref="constant"/>
    </coalescentTree>


    <treeModel id="treeModel">
        <coalescentTree idref="startingTree"/>
        <rootHeight>
            <parameter id="treeModel.rootHeight"/>
        </rootHeight>
        <nodeHeights internalNodes="true">
            <parameter id="treeModel.internalNodeHeights"/>
        </nodeHeights>
        <nodeHeights internalNodes="true" rootNode="true">
            <parameter id="treeModel.allInternalNodeHeights"/>
        </nodeHeights>
    </treeModel>

    <monophylyStatistic id="mAB">
        <mrca>
            <taxa idref="AB"/>
        </mrca>
        <treeModel idref="treeModel"/>
    </monophylyStatistic>

    <monophylyStatistic id="mCD">
        <mrca>
            <taxa idref="CD"/>
        </mrca>
        <treeModel idref="treeModel"/>
    </monophylyStatistic>

    <monophylyStatistic id="mABCD">
        <mrca>
            <taxa idref="ABCD"/>
        </mrca>
        <treeModel idref="treeModel"/>
    </monophylyStatistic>


    <mcmc id="mcmc" chainLength="1" preBurnin="0">
        <posterior id="posterior">
            <prior id="prior">
                <booleanLikelihood>
                    <monophylyStatistic idref="mAB"/>
                    <monophylyStatistic idref="mCD"/>
                    <monophylyStatistic idref="mABCD"/>
                </booleanLikelihood>
            </prior>
        </posterior>

        <operators>
            <scaleOperator scaleFactor="0.75" weight="1">
                <parameter id="xx" value="10" lower="0.0" upper="100.0"/>
            </scaleOperator>
        </operators>
        <log logEvery="1000">
            <column label="Posterior" dp="4" width="12">
                <posterior idref="posterior"/>
            </column>
        </log>
    </mcmc>

    <report>
        <treeModel idref="treeModel"/>
    </report>
    
</beast>
